<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/navigation_drawer_button"
            android:src="@drawable/ic_drawer"
            android:paddingLeft="@dimen/map_button_padding_horizontal"
            android:paddingRight="@dimen/map_button_padding_horizontal"
            android:paddingTop="@dimen/map_button_padding_vertical"
            android:paddingBottom="@dimen/map_button_padding_vertical"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/image_button_custom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_location_button"
            android:src="@drawable/ic_my_location"
            android:padding="@dimen/map_button_padding"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/image_button_custom"
            android:layout_alignParentBottom="true"
            android:onClick="OnMyLocationClicked"/>

    </RelativeLayout>

    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.eighlark.shield.fragments.NavigationDrawerFragment" />

</android.support.v4.widget.DrawerLayout>
